{
    "name": "Propeller C",
    "extension": [ "c", "h", "cpp", "hpp" ],
    "build": {
        "cmd": [
            [ "propbasic", "%1" ],
            [ "openspin","-L", "%2","%1" ]
        ]
    },
    "syntax": {
        "case_sensitive": true,
        "enable_blocks": [ false ],
        "string": [
            "\" \"",
            "' '",
            "# $"
        ],
        "number": [
            "\\b[0-9_]+\\b",
            "\\b0x[0-9_]+\\b"
        ],
        "function": [
            "\\b[A-Za-z0-9_]+(?=\\()\\b"
        ],
        "comment": [
            "/* */",
            "// $"
        ],
        "mode": {
            "default":
            {
                "keywords":
                [
                    "auto break case char const continue default do double else enum",
                    "extern float for goto if int long register return short signed",
                    "sizeof static struct switch typedef union unsigned",
                    "void volatile while"
                ],
                "operators":
                [
                    "+ - * / % ++ --",
                    "== != > < >= <=",
                    "&& || ! & | ^ ~ << >>",
                    "= += -= *= /= %= <<= >>= &= ^= |=",
                    "& * ? :",
                    "[ ] ( ) . ,"
                ]
            }
        }
    }
}
